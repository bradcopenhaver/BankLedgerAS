@{
    ViewData["Title"] = "Best Bank Ledger";
}

<div class="row">
    <div class="col-md-4">
        <h2>Login to Your Account</h2>
        <form asp-action="Account">
            <label>Account Number: </label>
            <input id="loginAcctNum" name="loginAcctNum" />
            <label>Password: </label>
            <input id="loginPswd" name="loginPswd" type="password" />
            <input type="submit" value="Login" />
        </form>
    </div>
    <div class="col-md-4">
        <h3>-or-</h3>
    </div>
    <div class="col-md-4">
        <h2>Register an Account</h2>
        <form asp-controller="Home" asp-action="Create" method="post">
            <label>Account Number: </label>
            <input readonly id="newAcctNum" name="newAcctNum" type="number" value=@(ViewBag.Ledger.Accounts.Count +1) />
            <label>Password: </label>
            <input name="pswd" id="pswd" type="password" />
            <label>Confirm Password: </label>
            <input name="confPswd" id="confPswd" type="password" />
            <input type="submit" value="Create Account" />
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div id="messages">
            <p>@ViewBag.Message</p>
        </div>
    </div>    
</div>
